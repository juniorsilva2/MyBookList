<%- include('header.ejs'); %>

<main>
    <section class="upd-screen">
        <div class="left">
            <img src="<%= book.caminhoCapa %>" alt="capa do Livro">
        </div>
        <div class="right">
            <h2 class="upd-title">Atualizar Livro</h2>
            <form class="upd-form" action="/updateLivro/<%= book.id %>" method="POST">

            <label class="upd-label" for="titulo">
                <strong>TÃ­tulo</strong>
            <input class="upd-input" type="text" name="titulo" id="titulo" value="<%= book.titulo %>">
            </label>

            <label class="upd-label" for="autor">
                <strong>Autor</strong>
                <input class="upd-input" type="text" name="autor" id="autor" value="<%= book.autor %>">
            </label>

            <label class="upd-label" for="descricao">
                <strong>Sinopse</strong>
                <textarea class="upd-input" name="descricao" id="descricao" rows="4" cols="50"><%= book.descricao %></textarea>
            </label>
            
            <label class="upd-label" for="caminhoCapa">
                <strong>Capa URL</strong>
                <input class="upd-input" type="text" name="caminhoCapa" id="caminhoCapa" value="<%= book.caminhoCapa %>">
            </label>

            <div>
                <input class="upd-btn" type="submit" value="Salvar">
                <a href="/deleteLivro/<%= book.id %>"><input type="button" value="Deletar" class="upd-btn"></a>
            </div>
            
            </form>
        </div>
    </section>
</main>


<%- include('footer.ejs'); %>